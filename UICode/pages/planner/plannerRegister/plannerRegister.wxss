.container{
  margin: 20rpx;
  font-size: 36rpx;
}

.clsView{
  display: flex;
  flex-direction: column;
  padding: 5rpx;
  margin: 15rpx 5rpx;
}
.clsImg{
  display: flex;
  flex-direction: row;
}
.clsIdCardImg{
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  background-color: #FFF;
  color: #099AFF;
  font-size: 100rpx;
  vertical-align:middle;
  text-align: center;
  margin: 10rpx;
}
.clsTxt{
  height: 50rpx;
  line-height: 50rpx;
  vertical-align: middle;
  color: #3e3e3e;
  margin: 5rpx;
  padding-left: 20rpx;
}
.clsInput{
  background-color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  color: #000;
  margin: 5rpx;
  vertical-align: middle;
  border-radius: 8rpx;
}

.clsRadio{
  display: flex;
  flex-direction: row;
}
.radio-group{
  padding-left:20rpx;
}
.clsArea{
  padding: 15rpx 5rpx 15rpx 20rpx;
  height: 300rpx;
  line-height: 30rpx;
  width: 660rpx;
}

.clsRadio{
  margin-top:20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
}
.clsNotChecked{
  border-radius: 8rpx;
  background-color: #bfbfc4;
  padding: 10rpx 20rpx;
  margin: 10rpx 20rpx 10rpx 0;
}
.clsChecked{
  background-color: #099AFF;
}


.clsBtn{
  margin: 50rpx 0;
  background-color: #57b1fd;
  color: #FFF;
}