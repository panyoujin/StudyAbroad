.container{
  margin: 20rpx;
  font-size: 30rpx;
}

/**plannerInfo*/
.plannerInfo{
  display: flex;
  flex-direction:row;
  background-color: #fff;
  padding:25rpx;
  border-radius: 8rpx;
}
.plannerImg{
  width: 180rpx;
  height: 100%;
}
.plannerImg .clsHead{
  width:160rpx;
  height: 160rpx;
  border-radius: 160rpx;
  margin:10rpx;
}
.plannerImg button{
  color:#099aff;
  border-radius:35rpx;
  background-color:#fff;
  font-size:28rpx;
  line-height:2.0;
}
.plannerImg button::after {
  border: 5rpx solid #099aff;
}
.plannerImg .clsBtnImg{
  width:160rpx;
  height: 55rpx;
  margin: 8rpx 10rpx;
  text-align: center;
}
.plannerHeadTxt{
  width: 100%;
  position: relative;
}
.plannerBtnMsg{
  position: absolute;
  right: 0;
  top: 10rpx;
}
.plannerBtnMsg image{
  width: 60rpx;
  height: 60rpx;
}
.clsPlannerTxt{
  display: flex;
  flex-direction:row;
  
  margin: 12rpx;
  color: #3e3e3e;
}
.clsTeamTxt{
  color: #929292;
}
.clcComment{
  color: #099aff;
}
.clsTeamMember{
  display: flex;
  flex-direction:row;
}
.clsTeamMember image{
  height: 100rpx;
  width: 100rpx;
  margin: 10rpx 20rpx 10rpx 0;
  border-radius: 5rpx;
}

/*clsQualifications*/
.clsQualifications{
  background-color: #fff;
  border-radius: 8rpx;
  padding:30rpx;
  margin-top: 20rpx;
}
.clsQualifications .clsQualificationTitle{
  color: #3e3e3e;
  margin: 15rpx 0;
  font-size: 38rpx;
  font-weight: bold;
  font-family: "黑体";
}
.clsQualifications .clsQualification{
  color: #434340;
  margin-top: 10rpx;
}

/*clsExamples*/
.clsExamples{
  background-color: #fff;
  border-radius: 8rpx;
  padding:30rpx;
  margin-top: 20rpx;
}
.clsExamples .clsExampleTitle{
  color: #3e3e3e;
  margin: 15rpx 0;
  font-size: 38rpx;
  font-weight: bold;
  font-family: "黑体";
}
.clsExamples .clsExample{
  color: #434340;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}

/**clsEvaluate*/
.clsEvaluateInfo{
  background-color: #fff;
  border-radius: 8rpx;
  padding:30rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}
.clsEvaluateTitle{
  color: #3e3e3e;
  margin: 15rpx 0;
  font-size: 38rpx;
  font-family: "黑体";
  vertical-align: middle;
}
.clsEvaluateTitle label{
  margin-right: 25rpx;
}
.clsEvaluateTitle image{
  width: 30rpx;
  height: 30rpx;
  margin: 0 6rpx;
}
.clsLables{
  display: flex;
  flex-direction:row;
  flex-wrap:wrap;
}
.clsLable{
  font-size: 37rpx;
  color: #7a7a7a;
  border:2rpx solid #7a7a7a;
  border-radius: 10rpx;
  padding: 10rpx;
  margin: 10rpx 20rpx 10rpx 0;
}

.clsEvaluates{
  margin: 20rpx 0;
  display: flex;
  flex-direction:column;
  width: 100%;
}
.clsEvaluate{
  border-top:2rpx solid #7a7a7a;
  /*border-radius: 10rpx;*/
  padding:10rpx 10rpx;
  margin-top: 10rpx;

}
.clsEvaluate view{
  padding-top: 10rpx;
}

/*clsSelect*/
.clsSelect{
  margin-top: 20rpx;
  margin-bottom: 35rpx;
}
.clsSelect button{
  background-color: #57b1fd;
  color: #fff;
}