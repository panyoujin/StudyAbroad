/* pages/dynamic/dynamicDetails/dynamicDetails.wxss */
page{
  background-color: #fff;
}
.searchResult{
  margin: 20rpx;
  border-radius: 3px;
}
.clsMoudel{
  margin-bottom: 20rpx;
}
.searchResult .serviceInfo{
  display: flex;
  flex-direction:row;
  background-color: #FFF;
  padding : 20rpx;
  padding-bottom: 0;
  position: relative;
  border-radius: 8rpx;
}
.img{
  vertical-align: middle;
  padding:15rpx;
}
.img image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 150px;
  border: 1px solid #eee;
}
.serviceTxtInfo{
  padding-left: 20rpx;
  vertical-align: middle;
  display:table-cell;
  margin-top:35rpx;
}
.serviceTxtInfo>view{
  margin-bottom:16rpx;
}
.clsName{
  font-size:35rpx;
  font-family: "黑体";
}
.clsService{
  font-family: "黑体";
  color: #727272;
  font-size:28rpx;
  line-height: 1.4;
}
.clsPrice{
  color: #099aff;
  font-size:28rpx;
}
.clsOther{
  position:absolute;
  right:30rpx;
  top:15%;
  color:#727272;
  font-size:26rpx;
  text-align:right;
  width:200rpx;
}

.clsDynamicImg{
  padding: 20rpx;
  padding-top:0;
  background-color: #fff;
  border-radius: 8rpx;
}
.clsDynamicImg image{
  width: 100%;
  height: 300rpx;
}
.clsDynamicImg label{
  padding: 15rpx 0;
  color:#727272;
  font-size:26rpx;
  text-align:right;
  border-bottom: 2rpx solid #eee;
}

.clsShare{
  margin: 0 auto;
  margin-top:20rpx;
  color:#099aff;
  border-radius:10rpx;
  background-color:#fff;
  font-size:28rpx;
  line-height:2.0;
  padding: 0 30rpx;
  border: 2rpx solid #099aff;
  float: left;
}
.clsShare button::after {
  border: 2rpx solid #099aff;
}