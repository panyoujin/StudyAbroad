/* pages/dynamic/dynamicList/dynamicList.wxss */
.searchResult{
  margin: 20rpx;
  border-radius: 3px;
}
.clsHead{
  margin-bottom: 10rpx;
  position: relative;
}
.clsHead image{
  width: 100%;
  height: 360rpx;
  border-radius: 8rpx;
}
.clsHead label{
  position:absolute;
  bottom:10rpx;
  left:0rpx;
  right: 0rpx;
  color:#fff;
  font-size:36rpx;
  background-color:#000; 
  padding:10rpx 25rpx;
  border-radius: 0 0 8rpx 8rpx;
  opacity: 0.7;
}


.clsMoudel{
  margin-bottom: 20rpx;
}
.searchResult .serviceInfo{
  display: flex;
  flex-direction:row;
  background-color: #FFF;
  padding : 20rpx;
  padding-bottom: 0;
  position: relative;
  
}
.img{
  vertical-align: middle;
  padding:15rpx;
}
.img image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 150px;
  border: 1px solid #eee;
}
.serviceTxtInfo{
  padding-left: 20rpx;
  vertical-align: middle;
  display:table-cell;
  margin-top:35rpx;
}
.serviceTxtInfo>view{
  margin-bottom:16rpx;
}
.clsName{
  font-size:35rpx;
  font-family: "黑体";
}
.clsService{
  font-family: "黑体";
  color: #727272;
  font-size:28rpx;
  line-height: 1.4;
}
.clsPrice{
  color: #099aff;
  font-size:28rpx;
}
.clsOther{
  position:absolute;
  right:30rpx;
  top:15%;
  color:#727272;
  font-size:26rpx;
  text-align:right;
  width:200rpx;
}

.clsDynamicImg{
  padding: 20rpx;
  padding-top:0;
  background-color: #fff;
  border-radius: 8rpx;
}
.clsDynamicImg image{
  width: 100%;
  height: 300rpx;
}
.clsDynamicImg label{
  padding-top: 10rpx;
  color:#727272;
  font-size:26rpx;
  text-align:right;
}