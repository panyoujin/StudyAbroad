/* pages/dynamic/dynamicAdd/dynamicAdd.wxss */
page{
  background-color: #fff;
}
.container{
  margin: 20rpx;
  font-size: 36rpx;
}
.clsView{
  width: 100%;
  position: relative;
  display: flex;
}

.clsArea{
  border:2rpx solid #eee;
  padding: 15rpx 5rpx 15rpx 20rpx;
  height: 300rpx;
  line-height: 30rpx;
  width: 100%;
}

.clsImgs{
  position: relative;
  display:flex;
  flex-wrap:wrap;
  margin: 15rpx;
}
.clsImg{
  margin: 10rpx;
  width:200rpx;
  height:200rpx;
}
image{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}


.clsBtn{
  margin: 30rpx 0;
  background-color: #57b1fd;
  color: #FFF;
}

.clsBtnView{
  position:inherit;
  display: block;
}
.clsBtnView label{
  width: 40rpx;
}


.clsAddImg{
  margin: 0 auto;
  margin-top:20rpx;
  color:#099aff;
  border-radius:10rpx;
  background-color:#fff;
  font-size:28rpx;
  line-height:2.0;
  padding: 0 30rpx;
  border: 2rpx solid #099aff;
  width: 200rpx;
  float: left;
}
.clsCleanImg{
  float: right;
}
.clsAddImg button::after {
  border: 2rpx solid #099aff;
}