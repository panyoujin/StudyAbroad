/* pages/planner/search/search.wxss */

/**search**/
.searchContainer{
  z-index: 999;
  display:flex;
  background-color: #fff;
  height: 110rpx;
  right: 0;
  left:0;
}
.search{
  width: 100%;
  position: relative;
}
.search icon{
  position: absolute;
  top: 35rpx;
  left: 60rpx;
}
.search input{
  height: 110rpx;
  line-height: 110rpx;
  /*border: 1px solid #CAE1FF;*/
  border-radius: 3px;
  padding-right: 65rpx;
  padding-left: 120rpx;
  font-size: 40rpx;
  background-color: #FFF;
  text-align: left;
  vertical-align: middle;
  color: #909291;
}
.txtSearchPlace{
  font-size: 14px;
  color: #8d8f8f;
}
.cancelSearch{
  /*width: 100rpx;*/
  margin-right: 15rpx;
  color: #01B488;
}
.cancelSearch image{
  width: 60rpx;
  height: 60rpx;
}

/**searchResult*/
.searchResult{
  margin: 20rpx 15rpx;
  border-radius: 3px;
}
.searchResult .plannerInfo{
  display: flex;
  flex-direction:row;
  background-color: #FFF;
  margin-bottom: 4rpx;
  padding : 20rpx 20rpx 30rpx;
  position: relative;
}
.img{
  vertical-align: middle;
  padding:45rpx 35rpx 25rpx 25rpx;
}
.img image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 150px;
  border: 1px solid #eee;
}
.plannerTxtInfo{
  padding-top: 12rpx;
}
.plannerTxtInfo>view{
  margin-top:10rpx;
}
.clsName{
  font-size:35rpx;
}
.clsService{
  color: #099aff;
  font-size:26rpx;
}
.clsNewEvaluate{
  color: #727272;
  font-size:26rpx;
}
.clsLables{
  display: flex;
  flex-direction: row;
}
.clsLable{
  color:#fff;
  font-size:26rpx;
  padding:10rpx 20rpx;
  vertical-align:middle;
  line-height:42rpx;
  height:42rpx;
  margin-right:10rpx;

}
.clsLablesColor01{
  background-color: #ffdd86;
}
.clsLablesColor02{
  background-color: #f6846a;
}
.clsLablesColor03{
  background-color: #67b0d6;
}
.clsTeamName{
  position:absolute;
  right:30rpx;
  top:50%;
  color:#727272;
  font-size:26rpx;
  text-align: right;
}