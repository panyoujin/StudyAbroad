.container{
  margin: 20rpx;
  font-size: 36rpx;
}

.clsView{
  display: flex;
  flex-direction: column;
  padding: 5rpx;
  margin: 5rpx;
}
.clsImg{
  display: flex;
  flex-direction: row;
}
.clsIdCardImg{
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  background-color: #FFF;
  color: #099AFF;
  font-size: 100rpx;
